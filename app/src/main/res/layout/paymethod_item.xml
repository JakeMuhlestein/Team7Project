<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_payMethod_type"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Pay Method Type"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_payMethod_accNum"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/text_view_payMethod_type"
            android:text="12572342"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_payMethod_expDate"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/text_view_payMethod_accNum"
            android:text="10/20"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_payMethod_balance"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/text_view_payMethod_type"
            android:text="100.00"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <TextView
            android:id="@+id/text_view_payMethod_points"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@+id/text_view_payMethod_balance"
            android:text="1000"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />






    </RelativeLayout>


</androidx.cardview.widget.CardView>